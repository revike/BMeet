server {
    listen       80;
    server_name  _;

    location / {
        proxy_pass   http://frontend:80;
    }

    location /static_back/ {
        root /usr/share/nginx/html;
    }

    location ~ ^/(api|admin)/ {
       proxy_http_version 1.1;
       proxy_set_header Upgrade $http_upgrade;
       proxy_set_header Connection "Upgrade";
       proxy_pass   http://web:8000;
    }
}
